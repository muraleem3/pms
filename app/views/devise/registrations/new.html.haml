.container#container_register1
  .row
    .col-sm-3
    .col-sm-6
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .row
          .col-sm-12
            = f.label :username
            %br/
            = f.text_field :username, autofocus: true,:class => 'form-control'
        .row
          .col-sm-12
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true,:class => 'form-control'
        .row
          .col-sm-12
            = f.label :password
            %br/
            = f.password_field :password, autocomplete: "off",:class => 'form-control'
        .row
          .col-sm-12
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off",:class => 'form-control'
        .row
          .col-sm-12
            = f.label :Mobile
            = f.number_field :mobile, autofocus: true,:class => 'form-control'
            
            = f.check_box :alert, {}, true, false
            = f.label "Send me Notifications"
            %br
        
          .col-sm-12
            = f.label :RegisterAs
            %br
            = f.radio_button :role, 'buyer/seller'
            = f.label :"buyer/seller"
            = f.radio_button :role, 'agent'
            = f.label :Agent
            = f.radio_button :role, 'builder'
            = f.label :Builder
            %br
            = f.submit "Sign up", :class => 'btn btn-primary'
            = render "devise/shared/links"
         


